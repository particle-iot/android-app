<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="#2E2F32"
    android:orientation="horizontal" >

    <View
        android:id="@+id/active_core_stripe"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/failure_red" />

    <com.danh32.fontify.TextView
        android:id="@+id/core_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/core_list_dot"
        android:drawablePadding="10dp"
        android:text="trochee_boomer"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/cores_list_text"
        android:textSize="@dimen/text_medium"
        fontify:font="@string/gotham_book" />

</LinearLayout>