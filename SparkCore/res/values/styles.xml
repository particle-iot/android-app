<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:fontify="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BigTextGradientActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/action_bar_transparent_gradient</item>
        <item name="android:displayOptions">showTitle|showHome|useLogo|homeAsUp</item>
    </style>

    <style name="BigTextGradientActionBar.NoUp">
        <item name="android:displayOptions">showTitle|showHome|useLogo|disableHome</item>
    </style>

    <style name="BigText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Other widget styles -->
    <style name="FormContainer">
        <item name="android:layout_width">@dimen/account_widget_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FinePrint" parent="android:Widget.Holo.TextView">
        <item name="font">@string/gotham_book</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">#99FFFFFF</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">#99FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinkText" parent="android:Widget.Holo.TextView">
        <item name="font">@string/gotham_book</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/link_text_selector</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SparkEditText" parent="android:Widget.Holo.EditText">
        <item name="font">@string/gotham_book</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">#7F000000</item>
        <item name="android:textColor">#E5000000</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">#E5FFFFFF</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="SparkEditText.Padded">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="FormLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="font">@string/gotham_book</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SparkButton" parent="android:Widget.Holo.Light.Button">
        <item name="font">@string/gotham_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SparkSpinner" parent="android:Widget.Holo.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_spinner</item>
        <item name="android:indeterminateDuration">500</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="SparkTinkerPin" parent="android:Widget.Holo.Light.TextView">
        <item name="font">@string/gotham_medium</item>
        <item name="android:layout_width">34dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/tinker_pin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SparkTinkerPinBG">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="SparkTinkerPinBG.Left">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="SparkTinkerPinBG.Right">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="SparkText" parent="android:Widget.Holo.Light.TextView">
        <item name="font">@string/gotham_book</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SparkText.Instructions">
        <item name="font">@string/gotham_book</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TinkerSelectColorBox">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TinkerSelectButton">
        <item name="font">@string/gotham_book</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TinkerSelectButtonBg">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TinkerProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_emerald</item>
    </style>

    <style name="TinkerSeekBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">155dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_sunflower</item>
        <item name="android:thumb">@drawable/white_circle</item>
        <item name="android:max">255</item>
    </style>

</resources>