<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tinker_select"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/tinker_selection_overlay_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tinker_button_hide"
            style="@style/TinkerSelectButtonBg"
            android:layout_marginRight="1dp" >

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="#3fffffff" />

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:layout_gravity="left"
                android:text="hide" />
        </LinearLayout>

        <com.danh32.fontify.TextView
            android:id="@+id/tinker_select_pin"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="D0"
            android:textSize="24sp"
            fontify:font="@string/font_thin" />

        <LinearLayout
            android:id="@+id/tinker_button_reset"
            style="@style/TinkerSelectButtonBg" >

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:layout_gravity="right"
                android:text="reset" />

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="#ff000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tinker_button_analog_read"
            style="@style/TinkerSelectButtonBg"
            android:layout_marginRight="1dp" >

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/emerald" />

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:text="analogRead" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tinker_button_digital_read"
            style="@style/TinkerSelectButtonBg" >

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:text="digitalRead" />

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/alizarin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tinker_button_analog_write"
            style="@style/TinkerSelectButtonBg"
            android:layout_marginRight="1dp" >

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/sunflower" />

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:text="analogWrite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tinker_button_digital_write"
            style="@style/TinkerSelectButtonBg" >

            <com.danh32.fontify.TextView
                style="@style/TinkerSelectButton"
                android:text="digitalWrite" />

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/cyan" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- </RelativeLayout> -->
